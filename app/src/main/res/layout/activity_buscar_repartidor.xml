<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buscarRepartidor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/homem" />

            <Spinner
                android:id="@+id/sucursales"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/moto" />

            <EditText
                android:id="@+id/repartidor"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:hint="Nombre del repartidor"
                android:inputType="textPersonName" />

        </LinearLayout>

        <Button
            android:id="@+id/buscarRepartidor"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:background="#82E0AA"
            android:fontFamily="sans-serif"
            android:text="Buscar Repartidor"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:text="Ã“"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/agregarRepartidor"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:background="#82E0AA"
            android:fontFamily="sans-serif"
            android:text="Agregar Repartidor"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>