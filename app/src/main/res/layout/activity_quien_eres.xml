<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".QuienEres">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingLeft= "16dp"
        android:paddingRight= "16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="60dp"
            android:text="RegÃ­strate en OrdersHome"
            android:textColor="#190707"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="116dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo"
            android:gravity="center"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="light italic"
            android:text="Soy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal|fill_horizontal|start|end"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableTop="@drawable/home"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Administrador"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/repartidor"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal|fill_horizontal|start|end"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableTop="@drawable/motorbike"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Repartidor"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/cliente"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left|right|center_vertical|center_horizontal|fill_horizontal|start|end"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/boton_redondo"
            android:drawableTop="@drawable/face"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Cliente"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="200dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>